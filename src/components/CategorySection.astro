---
import LinkCard from './LinkCard.astro';
import { DynamicIcon } from './DynamicIcon';

interface LinkItem {
  name: string;
  url: string;
  icon: string;
  description: string;
}

interface Props {
  title: string;
  icon: string;
  items: LinkItem[];
}

const { title, icon, items } = Astro.props;
---

<section class="category-section mb-8">
  <div class="flex items-center gap-2 mb-4 px-1">
    <DynamicIcon name={icon} className="text-indigo-500" size={24} />
    <h2 class="text-xl font-bold text-gray-800 dark:text-gray-100">{title}</h2>
  </div>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    {items.map((item) => (
      <LinkCard {...item} />
    ))}
  </div>
</section>
