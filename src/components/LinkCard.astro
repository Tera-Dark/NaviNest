---
import { DynamicIcon } from './DynamicIcon';

interface Props {
  name: string;
  url: string;
  icon: string;
  description: string;
}

const { name, url, icon, description } = Astro.props;
---

<a href={url} target="_blank" rel="noopener noreferrer" 
   class="link-card group relative flex flex-col p-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl hover:shadow-lg hover:-translate-y-1 transition-all duration-300 overflow-hidden"
   data-name={name.toLowerCase()}
   data-description={description.toLowerCase()}>
  <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  
  <div class="flex items-center gap-3 mb-2 relative z-10">
    <div class="p-2 rounded-lg bg-indigo-100/50 dark:bg-indigo-900/30 text-indigo-600 dark:text-indigo-400 group-hover:scale-110 transition-transform duration-300">
      <DynamicIcon name={icon} size={20} />
    </div>
    <h3 class="font-semibold text-gray-800 dark:text-gray-100 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
      {name}
    </h3>
  </div>
  
  <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2 relative z-10">
    {description}
  </p>
</a>
